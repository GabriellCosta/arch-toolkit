<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Recycler Adapter -->
        <activity
            android:name=".recyclerAdapter.SimpleListActivity"
            android:exported="false"
            android:label="Simple List Example" />
        <activity
            android:name=".recyclerAdapter.MultipleViewTypesActivity"
            android:exported="false"
            android:label="Multiple View Types Example" />
        <activity
            android:name=".recyclerAdapter.ChangingListActivity"
            android:exported="false"
            android:label="Changing List Example" />
        <activity
            android:name=".recyclerAdapter.StickyHeadersActivity"
            android:exported="false"
            android:label="Sticky Headers List Example" />

        <!-- State Machine -->
        <activity
            android:name=".statemachine.ViewStateMachineExampleActivity"
            android:exported="false"
            android:label="View State Example" />
        <activity
            android:name=".statemachine.SceneStateMachineExampleActivity"
            android:exported="false"
            android:label="Scene State Example" />

        <!-- Storage -->
        <activity
            android:name=".storage.StorageSampleActivity"
            android:exported="false"
            android:label="Storage Example" />

    </application>

</manifest>